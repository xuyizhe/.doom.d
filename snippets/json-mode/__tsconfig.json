{
  "compilerOptions": {
    "target": "${1:es5}",
    "module": "${2:commonjs}",
    "moduleResolution": "${3:node}",
    "noImplicitAny": true,
    "sourceMap": ${4:true},
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "es2015.generator"
    ],
    "outDir": "${0:dist/}",
    "declaration": true
  },
  "exclude": ["node_modules", "**/__tests__/**/*.ts"],
  "include": ["src/**/*.ts"]
}
